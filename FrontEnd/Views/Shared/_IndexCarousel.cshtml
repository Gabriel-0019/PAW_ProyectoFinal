@model IEnumerable<FrontEnd.Models.AutoViewModel>
@{
    var nombre = Context.Session.GetString("Nombre");
}

<!-- Carousel -->
<div class="container-fluid py-5">
    <div class="container">
        <div class="text-center pb-2">

            <h1 class="mb-4">Vehículos</h1>
        </div>
        <div class="owl-carousel testimonial-carousel">
            @foreach (var item in Model)
            {
                <div class="position-relative bg-secondary p-4">
                    <i class="fa fa-3x fa-quote-right text-primary position-absolute" style="top: -6px; right: 0;"></i>
                    <div class="d-flex align-items-center mb-3">
                        @{
                            string imageBase64 = Convert.ToBase64String(item.File);
                            string imageSrc = string.Format("data:ContentType = image/jpg;base64,{0}", imageBase64);
                            <img class="img-fluid" src="@imageSrc" style="width: 100px; height: 80px;" alt="" />
                        }
                        <br />
                        <br />
                        <div class="ml-3">
                            <h6 class="font-weight-semi-bold m-0">@item.Marca @item.Modelo</h6>
                            <p>
                                ₡@item.PrecioDia
                                <br />
                                @if (nombre != null)
                                {
                                    @Html.ActionLink("Ver detalles","Create","Alquiler", new { autoID = item.IdAuto })
                                }
                                else
                                {
                                    <small>Por favor iniciar sesión para poder alquilar el vehículo</small>
                                }
                            </p>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</div>
<!-- final carousel -->
